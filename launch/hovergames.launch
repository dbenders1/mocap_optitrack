<launch>
  <!-- Pass in mocap_config_file:=/path/to/config.yaml to change options. -->
  <arg name="mocap_config_file" 		default="$(find mocap_optitrack)/config/hovergames.yaml" />


  <!-- remap from mocap topic to specified topic and frequency in the config-->   	
  <node pkg="mocap_optitrack"
    	type="remap_node"
    	name="remap_node"
    	respawn="false"
    	launch-prefix=""
    	required="true"
    	output="screen">
    	<rosparam file="$(arg mocap_config_file)" command="load" />
  </node>


  <!-- Start the optitrack stream -->  
  <node pkg="mocap_optitrack"
    	type="mocap_node"
    	name="mocap_node"
    	respawn="false"
    	launch-prefix=""
    	required="true">
	<rosparam file="$(arg mocap_config_file)" command="load" />
  </node>

</launch>
